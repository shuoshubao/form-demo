{
    "name": "form-demo",
    "version": "1.0.0",
    "private": true,
    "description": "表单校验-最佳实践",
    "scripts": {
        "start": "vue-cli-service serve",
        "build": "vue-cli-service build && cp dist/index.html index.html",
        "build-analyzer": "npm run build -- --report",
        "commit": "npx git-cz",
        "prettier": "npx prettier --write **/src/**/*.{ts,vue,css,less,scss,md,json}",
        "lint": "npx eslint --ext .ts,.tsx,.vue -f html -o ESLintReport.html",
        "eslint": "npm run lint -- src",
        "eslint:fix": "npx eslint --ext .ts,.tsx,.vue --fix -- src"
    },
    "dependencies": {
        "@datafe/tools": "1.1.3",
        "@mt-material/datafe-dmc": "1.0.4",
        "@ss/mtd-vue": "0.3.4",
        "@types/lodash": "4.14.149",
        "axios": "^0.18.0",
        "dayjs": "1.8.16",
        "lodash": "4.17.15",
        "vue": "2.6.10",
        "vue-property-decorator": "8.4.2",
        "vue-router": "^3.0.1",
        "vue-template-compiler": "2.6.10",
        "vuex": "^3.0.1",
        "vuex-class": "^0.3.1"
    },
    "devDependencies": {
        "@datafe/config": "0.3.5",
        "@datafe/flow": "0.1.7",
        "@vue/cli-plugin-babel": "3.11.0",
        "@vue/cli-plugin-typescript": "3.2.2",
        "@vue/cli-service": "^3.4.1",
        "babel-plugin-import": "1.13.0",
        "cssnano": "^4.1.8",
        "eslint-plugin-prettier": "3.1.3",
        "fancy-log": "^1.3.3",
        "node-sass": "4.13.1",
        "postcss-cssnext": "^3.1.0",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^3.0.0",
        "raw-loader": "4.0.1",
        "sass-loader": "^7.0.1",
        "typescript": "3.5.2"
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -e $GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{ts,vue,css,less,scss,md,json}": [
                "prettier --write",
                "git add"
            ],
            "src/{common,views}/**/*.{ts,tsx}": [
                "eslint --fix",
                "git add"
            ],
            "src/{common,views}/**/*.{ts,tsx,vue}": [
                "eslint",
                "git add"
            ]
        },
        "ignore": [
            "vue.config.js"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
